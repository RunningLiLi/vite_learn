{
  "name": "vite_learn",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "pnpx prettier --write packages",
    "prepare": "husky install",
    "lint": "pnpm --filter ./packages/* run lint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "commitlint": "^17.6.5",
    "husky": "^8.0.3"
  },
  "dependencies": {
    "lint-staged": "^13.2.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts}": [
      "pnpm run lint",
      "git add ."
    ],
    "**/*.{css,scss}": [
      "pnpm --filter ./packages/vite_lint run lint:style",
      "git add ."
    ]
  }
}
